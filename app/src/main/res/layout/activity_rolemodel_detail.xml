    <TextView
        android:id="@+id/textview_rolemodel_detail_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="흰*이"
        android:textSize="30sp"
        android:textColor="@color/black"
        android:fontFamily="@font/font_num1"
        android:background="@drawable/shadow"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageView
        android:id="@+id/imageview_rolemodel_detail_image"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_margin="30dp"
        android:src="@drawable/hindoongi"
        android:background="@drawable/shadow"
        app:layout_constraintTop_toBottomOf="@+id/textview_rolemodel_detail_name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
    <LinearLayout
        android:id="@+id/linearlayout_rolemodel_detail_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/imageview_rolemodel_detail_image"
        app:layout_constraintLeft_toLeftOf="parent"
        >
        <Button
            android:id="@+id/buttn_rolemodel_detail1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="칼로리"
            android:textSize="10sp"/>
        <Button
            android:id="@+id/buttn_rolemodel_detail2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="식단"
            android:textSize="10sp"
            />
    </LinearLayout>

    <!--FRAGMENT_SCREEN_SLIDE_PAGE.xml -->
    <com.github.mikephil.charting.charts.CandleStickChart
        android:id="@+id/candlestickchart_rolemodel_detail"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_margin="30dp"
        app:layout_constraintTop_toBottomOf="@+id/linearlayout_rolemodel_detail_btn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/shadow"
        />

    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/piechart_rolemodel_detail"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_margin="30dp"
        android:background="@drawable/shadow"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/linearlayout_rolemodel_detail_btn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >

    </com.github.mikephil.charting.charts.PieChart>

</androidx.constraintlayout.widget.ConstraintLayout>