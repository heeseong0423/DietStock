<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            >
            <ImageView
                android:layout_height="150dp"
                android:layout_width="100dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:id="@+id/food_image"
                />

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:orientation="vertical">

                <LinearLayout android:layout_height="wrap_content"
                    android:layout_width="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:text="칼로리"
                        ></TextView>

                    <EditText
                        android:layout_width="77dp"
                        android:layout_height="match_parent"
                        android:id="@+id/kcal"></EditText>
                </LinearLayout>
                <LinearLayout android:layout_height="wrap_content" android:layout_width="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="탄수화물"></TextView>

                    <EditText
                        android:layout_width="62dp"
                        android:layout_height="match_parent"
                        android:id="@+id/carbs"></EditText>
                </LinearLayout>
                <LinearLayout android:layout_height="wrap_content" android:layout_width="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="단백질"></TextView>

                    <EditText
                        android:layout_width="78dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/protein"></EditText>
                </LinearLayout>
                <LinearLayout android:layout_height="wrap_content" android:layout_width="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="지방"></TextView>

                    <EditText
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/fat"></EditText>
                </LinearLayout>
                <LinearLayout android:layout_height="wrap_content" android:layout_width="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="시간"></TextView>

                    <EditText
                        android:layout_width="89dp"
                        android:layout_height="match_parent"
                        android:id="@+id/time"></EditText>
                </LinearLayout>


            </LinearLayout>

            <EditText
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:text="food_name"
                android:id="@+id/foodname"
                ></EditText>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>