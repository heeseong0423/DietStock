<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextureView
        android:id="@+id/textureView"
        android:layout_width="wrap_content"
        android:layout_height="410dp"
        app:layout_constraintTop_toBottomOf="@id/foodName"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/foodName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poorstory"
        android:textSize="30dp"
        android:text="음식을 촬영해 주세요"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <androidx.appcompat.widget.SearchView
        android:id="@+id/foodSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:queryHint="검색어를 입력하십시오"
        app:iconifiedByDefault="true"/>


    <ImageView
        android:id="@+id/resultImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/textureView"
        android:visibility="invisible"/>

    <Button
        android:id="@+id/takeBtn"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:text="촬영"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textureView"
        android:visibility="visible"
        android:clickable="true"
        android:fontFamily="@font/poorstory"
        android:background="@drawable/shadow"/>

    <Button
        android:id="@+id/submitBtn"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="35dp"
        android:text="제출"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/SubConstraint"
        android:visibility="invisible"
        android:clickable="false"
        android:fontFamily="@font/poorstory"
        android:background="@drawable/shadow"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/servingConstraint"
        android:layout_width="250dp"
        android:layout_height="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/submitBtn"
        android:layout_marginBottom="20dp"
        android:visibility="invisible"
        android:fontFamily="@font/poorstory">
        <EditText
            android:id="@+id/serving"
            android:layout_width="80dp"
            android:layout_height="40dp"
            app:layout_constraintBottom_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:text="1"
            android:textSize="20dp"
            android:inputType="number"
            android:maxLines="1"/>
        <TextView
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:text="인분"
            android:textSize="20dp"
            app:layout_constraintLeft_toLeftOf="@id/serving"
            app:layout_constraintTop_toTopOf="@id/serving"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/SubConstraint"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginBottom="180dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/shadow">

        <TextView
            android:id="@+id/carbohydrate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:fontFamily="@font/poorstory"
            android:text="탄수화물"
            app:layout_constraintBottom_toTopOf="@+id/protein"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="40dp"/>

        <TextView
            android:id="@+id/kcal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="칼로리"
            app:layout_constraintBottom_toTopOf="@+id/carbohydrate"
            android:layout_marginLeft="40dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:fontFamily="@font/poorstory"/>

        <TextView
            android:id="@+id/protein"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="36dp"
            android:fontFamily="@font/poorstory"
            android:text="단백질"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="40dp"/>

        <TextView
            android:id="@+id/fat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poorstory"
            android:text="지방"
            app:layout_constraintBottom_toTopOf="@+id/cholesterol"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="40dp"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/cholesterol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="36dp"
            android:fontFamily="@font/poorstory"
            android:text="콜레스테롤"
            app:layout_constraintBottom_toTopOf="@+id/natrium"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="40dp"/>

        <TextView
            android:id="@+id/natrium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:fontFamily="@font/poorstory"
            android:text="나트륨"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="40dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>